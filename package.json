{
  "name": "drivesage",
  "version": "1.0.0",
  "description": "Smart Google Drive Organization Tool - Privacy-first file management with AI-powered organization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint .",
    "test": "jest",
    "clean": "rm -rf node_modules package-lock.json dist",
    "reinstall": "npm run clean && npm install"
  },
  "keywords": [
    "google-drive",
    "file-organization",
    "duplicate-detection",
    "file-management",
    "electron",
    "desktop-app",
    "privacy",
    "ai-powered"
  ],
  "author": {
    "name": "DriveSage Team",
    "email": "hello@drivesage.app"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drivesage/drivesage.git"
  },
  "bugs": {
    "url": "https://github.com/drivesage/drivesage/issues"
  },
  "homepage": "https://drivesage.app",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "fs-extra": "^11.1.1",
    "googleapis": "^128.0.0",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.drivesage.app",
    "productName": "DriveSage",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!build/**/*",
      "!*.log"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Utility"
    },
    "dmg": {
      "title": "DriveSage",
      "icon": "assets/icon.icns",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "win32",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
} 